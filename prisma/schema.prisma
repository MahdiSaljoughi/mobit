model Post {
  id          Int    @id @unique @default(autoincrement())
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          Int      @id @unique @default(autoincrement())
  title       String
  slug        String
  price       Int
  count       Int
  description String
  cat         String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}