generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

enum Rule {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  user_name String?  @unique
  email     String   @unique
  phone     String?  @unique
  password  String
  rule      Rule     @default(USER)
  // emailVerified  Boolean    @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product[]
  post    Post[]
}

model Product {
  id          Int      @id @unique @default(autoincrement())
  title       String
  slug        String
  price       Int
  count       Int
  description String
  cat         String
  image       String
  author      User     @relation(fields: [createdBy], references: [user_name])
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          Int      @id @unique @default(autoincrement())
  title       String
  description String
  image       String
  author      User     @relation(fields: [createdBy], references: [user_name])
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}